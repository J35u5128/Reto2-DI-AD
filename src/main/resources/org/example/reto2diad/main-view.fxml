<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.reto2diad.controller.MainController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <children>
                <Label text="Colección de películas" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label fx:id="lblUsuario" text="[Usuario]" textFill="#7f8c8d">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 10;">
                    <children>
                        <Button onAction="#handleAnadirCopia" prefWidth="150.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 0;" text="Añadir Copia" />
                        <Button onAction="#handleEliminarCopia" prefWidth="220.0" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 0;" text="Eliminar Copia Seleccionada" />
                        <Button fx:id="btnNuevaPelicula" onAction="#handleAnadirPelicula" prefWidth="200.0" style="-fx-background-color: #1a9e00; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-background-radius: 0;" text="Añadir Película (Admin)" textFill="WHITE" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Lista de copias" textFill="#34495e">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label text=" (Doble Clic para Detalle/Modificar)" textFill="#7f8c8d">
                            <font>
                                <Font name="System Italic" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <TableView fx:id="tvCopias" style="-fx-background-color: #ffffff; -fx-border-color: #ced4da; -fx-border-radius: 0;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTitulo" prefWidth="350.0" text="Película" />
                        <TableColumn fx:id="colEstado" prefWidth="200.0" text="Estado" />
                        <TableColumn fx:id="colSoporte" prefWidth="200.0" text="Plataforma" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10;">
                    <children>
                        <Button alignment="TOP_LEFT" onAction="#handleCerrarSesion" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 0;" text="Cerrar Sesión" />
                        <Button onAction="#handleCerrarAplicacion" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 0;" text="Cerrar Aplicación" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>
